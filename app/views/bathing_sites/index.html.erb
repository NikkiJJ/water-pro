<div class="body">
    <div class="text-center mt-3">
      <h1><%= @bathing_sites.first.site_name.capitalize %></h1>
    </div>
<div style="width: 100%; height: 500px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<div class="card-container">
  <% @bathing_sites.each do |bathing_site| %>
    <div class="card">
      <%= link_to bathing_site_path(bathing_site) do %>
        <div class="card-header">
          <%= bathing_site.site_name.capitalize %>
        </div>
        <div class="card-body">
          <p class="card-text">Pollution Level: <%= bathing_site.pollution_level %></p>
          <p class="card-text">Tide: <%= bathing_site.tide %></p>
          <p class="card-text">Region: <%= bathing_site.region.capitalize %></p>
        <div class="container-btn-options">
  <%= render 'shared/buttons/back_button' %>
  <%= render 'shared/buttons/tide_button' %>
  <%= render 'shared/buttons/weather_button' %>
  <%= render 'shared/buttons/get_directions_button' %>
</div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="body">
    <div class="first">
      <div class="top-section">
        <div class="header-section">
          <h3><%= @bathing_site.site_name.capitalize %></h3>
          <h6><%= @bathing_site.region %> . <%= @reviews.count %> reviews . <%= @reports.count %> reports</h6>
        <br>
        <%= @bathing_site.site_info %>
        </div>
        <div id="carouselExampleControls" class="carousel slide my-4" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100 rounded" src="<%= @bathing_site.web_res_image_url %>" alt="Bathing Site Image">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100 rounded" src="https://images.unsplash.com/..." alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100 rounded" src="https://images.unsplash.com/..." alt="Third slide">
            </div>
          </div>

          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <div class="site-info">
        <div class="fav">
          <%= render "shared/buttons/get_directions_button" %>
          <%= render "shared/buttons/favourite_button" %>
        </div>

        <% if @bathing_site.water_quality == "closed" %>
          <div class="water-item">
            <i class="fa-solid fa-exclamation"></i>
            <h6>The water quality is <%= @bathing_site.water_quality.downcase %></h6>
          </div>
        <% else %>
          <div class="water-item">
            <i class="fa-solid fa-check"></i>
            <h6>The water quality is <%= @bathing_site.water_quality.downcase %></h6>
          </div>
        <% end %>

        <div class="tide-item">
          <i class="fa-solid fa-droplet"></i>
          <h6>The tide today is <%= @bathing_site.tide %></h6>
        </div>

        <div class="weather-info">
          <% if @weather_data.present? %>
            <i class="fa-solid fa-rainbow"></i>
            <h6> <%= @weather_data['main']['temp'] %>Â°C, <%= @weather_data['weather'][0]['description'] %></h6>
          </div>
          <% else %>
            <p>Weather information not available.</p>
          <% end %>
        </div>

        <% if @bathing_site.reports.any? { |report| report.confirmation } %>
          <%= render "reports/show", locals: { reports: @reports} %>
        <% end %>

      </div>
    </div>

    <div class="second">
      <img src="https://images.unsplash.com/photo-1564698010692-0fe284aae806?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1854&q=80" alt="">
      <h4>Get instant updates on water quality and stay informed about pollution issues at your favorite beaches.</h4>
    </div>

    <div class="third">
      <div class="bottom-page">
        <div class="review-card">
          <h4>Share your thoughts...</h4>
          <% if @reviews.any? %>
            <% @reviews.each do |review| %>
              <div class="each-review">
                <p><%= review.date %> <% review.ratings.times do %>
                  <i class="fa-solid fa-star"></i>
                <% end %></p>
                <div class="review-content">
                <h6><%= review.title.capitalize %></h6>
                <p><%= review.body %></p>
                <%= render "report_reviews/flag_review", review: review %>
                </div>
              </div>
            <% end %>
          <% else %>
            <h6>No reviews available for <%=     @bathing_site.site_name %></h6>
          <% end %>
          <%= render 'shared/buttons/create_new_button'%>
        </div>

        <div class="form-container">
          <div class="form-inner-container">
            <%= render "reports/new_report", locals: { report: @new_report, bathing_site: @bathing_site} %>
          </div>
        </div>
      </div>
    </div>

</div>

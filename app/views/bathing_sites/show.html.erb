<div class="body">
  <div class="container">
    <div class="header-section">
      <h2><%= @bathing_site.site_name.capitalize %></h2>
      <h4> <%= @bathing_site.region %> . <%= @reviews.count %> reviews . <%= @reports.count %> reports</h4>
    </div>
    <div id="carouselExampleControls" class="carousel slide my-4" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100 rounded" src="https://images.unsplash.com/photo-1473116763249-2faaef81ccda?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1796&q=80" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100 rounded" src="https://images.unsplash.com/photo-1520454974749-611b7248ffdb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1887&q=80" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100 rounded" src="https://images.unsplash.com/photo-1520942702018-0862200e6873?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <div class="site-info">
        <div class="fav">
          <%= render "shared/buttons/favourite_button" %>
        </div>
      <% if @bathing_site.water_quality == "closed" %>
        <div class="water-item">
            <i class="fa-solid fa-exclamation"></i>
            <h4>The water quality is <%= @bathing_site.water_quality.downcase %></h4>
        </div>
      <% else %>
          <div class="water-item">
          <i class="fa-solid fa-check"></i>
          <h4>The water quality is <%= @bathing_site.water_quality.downcase %></h4>
        </div>
      <% end %>
        <div class="tide-item">
          <i class="fa-solid fa-droplet"></i>
          <h4>The tide today is <%= @bathing_site.tide %></h4>
        </div>
        <div class="weather-info">
    <% if @weather_data.present? %>
    <i class="fa-solid fa-temperature-half"></i>
    <h4> Current temperature is: <%= @weather_data['main']['temp'] %>Â°C</h4>
    </div>
    <div class="weather-info">
    <i class="fa-solid fa-rainbow"></i>
    <h4>Conditions: <%= @weather_data['weather'][0]['description'] %></p>
    </div>
    <% else %>
      <p>Weather information not available.</p>
    <% end %>
  </div>

      <% if @bathing_site.reports.any? { |report| report.confirmation } %>
        <%= render "reports/show", locals: { reports: @reports} %>
      <% end %>

    </div>

      <h2 class="text-center">. . .</h2>

    <div class="bottom-page">
        <div class="review-card">
            <h3>Share your thoughts...</h3>
              <% if @reviews.any? %>
                    <% @reviews.each do |review| %>
                    <div class="each-review">
                      <h4><%= review.title %></h4>
                      <p><%= review.body %></p>
                      <p><%= review.date %></p>
                      <%= link_to new_report_review_path, method: :get do %>
                        <div>
                          <i class="fa-solid fa-flag"></i>
                        </div>
                      <% end %>
                    <% end %>
              <% else %>
                <h2>No reviews available for <%= @bathing_site.site_name %></h2>
              <% end %>
               <%= render 'shared/buttons/create_new_button' %>
        </div>
        <div class="form-container">
          <div class="form-inner-container">
              <%= render "reports/new_report", locals: { report: @new_report, bathing_site: @bathing_site} %>
          </div>
        </div>
    </div>
  </div>
</div>

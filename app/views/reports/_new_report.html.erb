<h5>Report an issue at <%= @bathing_site.site_name %></h5>

<%= simple_form_for [@bathing_site, @new_report] do |f|%>
  <% f.label :issue %>
  <%= f.input :issue, as: :select, collection: (['Sewage', 'Oil Spill', 'Weather Issues', 'High Tide', 'Excessive Litter', 'Other']) %>

  <% f.label :comment %>
  <%= f.input :comment, as: :text %>

  <%= f.button :submit, class: "button" %>
<% end %>
